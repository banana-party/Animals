<Window x:Class="Amimals.WPF.Views.MainWindowView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Amimals.WPF" xmlns:viewmodels="clr-namespace:Amimals.WPF.ViewModels" xmlns:converters="clr-namespace:Amimals.WPF.Converters"
		mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
	<Window.DataContext>
		<viewmodels:MainWindowViewModel/>
	</Window.DataContext>
	<Window.Resources>
		<Style TargetType="Button">
			<Setter Property="Margin" Value="12"/>
		</Style>
	</Window.Resources>
    <Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="6*"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>
		<DataGrid Grid.Row="0" ItemsSource="{Binding Animals, Mode=OneWay}" AutoGenerateColumns="False" CanUserAddRows="False">
			<DataGrid.Columns>
				<DataGridTextColumn Header="Тип" Binding="{Binding AnimalToStringConverter}" IsReadOnly="True"/>
				<DataGridTextColumn Header="Рост" Binding="{Binding Height}" IsReadOnly="True"/>
				<DataGridTextColumn Header="Вес" Binding="{Binding Weight}" IsReadOnly="True"/>
				<DataGridTextColumn Header="Цвет глаз" Binding="{Binding EyeColor}" IsReadOnly="True"/>
			</DataGrid.Columns>
		</DataGrid>
		<Grid Grid.Row="1">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="*"/>
			</Grid.ColumnDefinitions>
			<!--TODO:Проверить работу этой View-->
			<Button Grid.Column="0" Command="{Binding AddCommand}">Добавить</Button>
			<Button Grid.Column="1" Command="{Binding EditCommand}">Редактировать</Button>
			<Button Grid.Column="2" Command="{Binding RemoveCommand}">Удалить</Button>
		</Grid>
    </Grid>
</Window>
